<UserControl x:Class="Cycode.VisualStudio.Extension.Shared.Components.ToolWindows.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <TextBlock Text="Cycode is loading... It may take a few seconds to load the plugin."
                   TextWrapping="Wrap" Margin="0,0,0,20" />
        <TextBlock Text="The plugin uses Cycode CLI as the core engine for the entire developer experience ecosystem."
                   TextWrapping="Wrap" Margin="0,0,0,20" />

        <TextBlock Text="The loading process contains 3 steps:"
                   Margin="0,0,0,10" />
        <TextBlock Text="1. Trying to find the core and verifying installation."
                   Margin="0,0,0,5" />
        <TextBlock
            Text="2. Downloading the core if it does not exist and if executable auto-management setting is enabled."
            Margin="0,0,0,5" />
        <TextBlock Text="3. Health-checking the core and negotiating versions."
                   Margin="0,0,0,5" />

        <TextBlock
            Text="Note: If it's your first time using the plugin, it may take a bit longer to download the core."
            TextWrapping="Wrap" Margin="0,20,0,0" />
    </StackPanel>
</UserControl>