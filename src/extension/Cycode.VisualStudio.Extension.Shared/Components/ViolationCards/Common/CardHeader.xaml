<UserControl x:Class="Cycode.VisualStudio.Extension.Shared.Components.ViolationCards.Common.CardHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:t="clr-namespace:Cycode.VisualStudio.Extension.Shared.Components.ViolationCards.Common.TextBoxes">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image x:Name="Icon" Grid.Row="0" Grid.Column="0" Height="40" Width="40" Margin="15, 10, 10, 5" />
        <t:TextBox Grid.Row="0" Grid.Column="1" x:Name="Title" FontSize="16" Margin="0, 10, 5, 5" />
    </Grid>
</UserControl>