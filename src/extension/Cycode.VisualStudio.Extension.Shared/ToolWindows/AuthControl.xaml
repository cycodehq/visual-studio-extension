<UserControl x:Class="Cycode.VisualStudio.Extension.Shared.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Margin="0,0,0,10" >
                <Run>Cycode extension requires pre-installed </Run>
                <Hyperlink NavigateUri="https://github.com/cycodehq/cycode-cli#install-cycode-cli">
                    <Run>Cycode CLI</Run>
                </Hyperlink>
            </TextBlock>
            <Button Margin="0,0,0,10"
                Content="Authenticate"
                    Click="AuthClickAsync"
                    Width="150"
                    Height="30"
                    Name="AuthBtn" />
            <TextBlock>
                <Run>To learn more about how to use Cycode in the Visual Studio, please visit </Run>
                <Hyperlink NavigateUri="https://github.com/cycodehq/visual-studio-extension/blob/main/README.md">
                    <Run>our docs</Run>
                </Hyperlink>
                <Run>.</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>